@{
    ViewData["Title"] = "Home Page";

}
<div class="starter-template">
    <h1>PasswordBox</h1>

    <p class="lead">
        A secure place to store all your passwords
    </p>

    @if (User.Identity.IsAuthenticated)
    {

        <div class="text-center">
            <a asp-controller="Vault" asp-action="Index" class="btn btn-primary">
                Go to your accounts
            </a>
        </div>
    }
    else
    {
        <div class="text-center">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                Create New Account
            </a>

            or
            <a asp-controller="Account" asp-action="Login" class="btn btn-success">
                Login
            </a>
        </div>
    }

</div>

